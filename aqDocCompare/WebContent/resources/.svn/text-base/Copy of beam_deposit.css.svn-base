html {
	height: 100%;
}

body {
	background: #fff;
	margin: 0px;
	border: 0px;
	padding: 0px;
	height: auto;
	overflow-y: scroll;
	overflow-x: auto;
	background: -moz-linear-gradient(top, #bdbde3, #ffffff);
	background: -webkit-gradient(linear, left top, left bottom, from(#bdbde3),
		to(#ffffff), fixed );
	/* IE specific */
	filter: progid :   DXImageTransform.Microsoft.Gradient ( StartColorStr =
		'#bdbde3', EndColorStr = '#ffffff', GradientType = 0 );
}

#navigation_inner {
	line-height: 26px;
	height: 26px;
	font-size: 14px;
	font-weight: bold;
	background-color: #000;
	width: 100%;
}

#navLinksLeft {
	float: left;
	margin-left: 15px;
}

#navLinksLeft a {
	color: #fff;
	text-decoration: none;
}

#navLinksLeft a:hover { 
	color: #ccc;
	text-decoration: underline;
}	
	
#navLinksRight { 
	float:right;
	margin-right: 15px;
}

#navLinksRight a {
	color: #fff;
	text-decoration: none;
}

#navLinksRight a:hover {
	color: #ccc;
	text-decoration: underline;
}

#navLinksAdmin a {
	color: #900020;
	text-decoration: none;
}

#navLinksAdmin a:hover {
	color: #c32148;
	text-decoration: underline;
}

